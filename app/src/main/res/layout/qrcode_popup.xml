<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="410dp"
    android:layout_gravity="center"
    android:background="@drawable/pop_up_background">


    <ImageView
        android:id="@+id/qrcode_image"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QrCode da obra"
        android:fontFamily="@font/montserrat_light1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="60dp"
        android:background="@color/unselectedItem"/>

    <ImageButton
        android:id="@+id/download"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart= "14dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/selectedItem"
        android:background="@drawable/pu_download_icon"
        />

    <ImageButton
        android:id="@+id/share"
        android:layout_width="42dp"
        android:backgroundTint="@color/selectedItem"
        android:layout_height="42dp"
        android:layout_marginStart= "74dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/pu_share_icon"
        />

    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/sb_cancel_icon"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/unselectedItem"/>

</RelativeLayout>