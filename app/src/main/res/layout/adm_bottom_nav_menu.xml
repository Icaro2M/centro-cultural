<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="102dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_marginTop="680dp"

    >



    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/montserrat_light1"
        android:background="#1c1c1c"/>

    <Button

        android:id="@+id/user_bnv_home_button"

        android:background="@android:color/transparent"

        android:layout_marginStart="16dp"
        android:layout_width="70dp"

        android:layout_height="80dp"
        android:paddingBottom="0dp"/>


    <ImageView
        android:id="@+id/user_bnv_home_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/bnv_home_icon"
        android:layout_marginStart="29dp"

        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/user_bnv_home_txt"
        android:layout_width="58dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingBottom="14dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_light1"
        android:text="Home"
        android:textSize="16sp"
        android:textColor="#8c8c8c"
        android:layout_alignStart="@id/user_bnv_home_button"
        android:layout_alignEnd="@id/user_bnv_home_button"/>




    <Button
        android:id="@+id/user_bnv_qrcode_button"

        android:paddingTop="4dp"

        android:background="@android:color/transparent"

        android:layout_marginStart="114dp"
        android:layout_width="70dp"

        android:layout_height="80dp"
        android:paddingBottom="0dp"


        />

    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/user_bnv_qrcode_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:background="@drawable/bnv_qrcode_icon"
        android:layout_marginStart="127dp"
        />
    <TextView
        android:layout_marginStart="110dp"
        android:id="@+id/user_bnv_qrcode_txt"
        android:layout_width="78dp"
        android:gravity="center"
        android:fontFamily="@font/montserrat_light1"
        android:layout_alignParentBottom="true"
        android:paddingBottom="14dp"
        android:layout_height="wrap_content"
        android:text="Qr Code"
        android:textSize="16sp"
        android:textColor="#8c8c8c"

       />



    <Button
        android:layout_marginEnd="114dp"

        android:id="@+id/user_bnv_search_button"



        android:background="@android:color/transparent"
        android:textColor="#8c8c8c"
        android:layout_alignParentEnd="true"
        android:layout_width="70dp"

        android:layout_height="80dp"
        android:paddingBottom="0dp"/>

    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/user_bnv_search_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="127dp"
        android:background="@drawable/bnv_search_icon"

        />
    <TextView
        android:layout_alignStart="@id/user_bnv_search_button"
        android:id="@+id/user_bnv_search_txt"
        android:layout_width="58dp"
        android:gravity="center"
        android:fontFamily="@font/montserrat_light1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:textSize="16sp"
        android:textColor="#8c8c8c"

        android:layout_alignEnd="@id/user_bnv_search_button"/>

    <Button
        android:layout_marginEnd="16dp"

        android:id="@+id/user_bnv_add_button"



        android:background="@android:color/transparent"
        android:textColor="#8c8c8c"
        android:layout_alignParentEnd="true"
        android:layout_width="70dp"

        android:layout_height="80dp"
        android:paddingBottom="0dp"/>

    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/user_bnv_add_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp"
        android:background="@drawable/adm_bnv_add_icon"


        />
    <TextView

        android:id="@+id/user_bnv_add_txt"
        android:layout_width="86dp"
        android:fontFamily="@font/montserrat_light1"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        android:textSize="16sp"
        android:textColor="#8c8c8c"
        android:layout_marginEnd="9dp"
        android:layout_alignParentEnd="true"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="#0069b5"/>
    <TextView
        android:id="@+id/user_bnv_home_selected_line"
        android:layout_width="102dp"
        android:layout_height="5dp"
        android:layout_marginTop="3dp"
        android:visibility="invisible"

        android:background="#0069b5"/>


    <TextView
        android:id="@+id/user_bnv_search_selected_line"
        android:layout_width="102dp"
        android:layout_height="5dp"
        android:visibility="invisible"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="102dp"
        android:layout_alignParentEnd="true"
        android:background="#0069b5"/>
    <TextView
        android:id="@+id/user_bnv_add_selected_line"
        android:layout_width="102dp"
        android:layout_height="5dp"
        android:visibility="invisible"
        android:layout_marginTop="3dp"

        android:layout_alignParentEnd="true"
        android:background="#0069b5"/>


</RelativeLayout>