<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="102dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_marginTop="680dp"

    >



    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#1c1c1c"/>

    <Button

        android:id="@+id/user_bnv_home_button"

        android:background="@android:color/transparent"

        android:layout_marginStart="16dp"
        android:layout_width="100dp"

        android:layout_height="80dp"
        android:paddingBottom="0dp"/>


    <ImageView
        android:id="@+id/user_bnv_home_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bnv_home_icon"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:fontFamily="@font/montserrat_light1"
        android:id="@+id/user_bnv_home_txt"
        android:layout_width="58dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="18sp"
        android:textColor="#8c8c8c"
        android:layout_alignStart="@id/user_bnv_home_button"
        android:layout_alignEnd="@id/user_bnv_home_button"/>




    <Button
        android:id="@+id/user_bnv_qrcode_button"

        android:paddingTop="4dp"

        android:background="@android:color/transparent"

        android:layout_centerHorizontal="true"
        android:layout_width="100dp"

        android:layout_height="80dp"
        android:paddingBottom="0dp"


        />

    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/user_bnv_qrcode_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@id/user_bnv_qrcode_button"
        android:background="@drawable/bnv_qrcode_icon"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:fontFamily="@font/montserrat_light1"
        android:layout_alignStart="@id/user_bnv_qrcode_button"
        android:id="@+id/user_bnv_qrcode_txt"
        android:layout_width="58dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content"
        android:text="Qr Code"
        android:textSize="18sp"
        android:textColor="#8c8c8c"

        android:layout_alignEnd="@id/user_bnv_qrcode_button"/>



    <Button
        android:layout_marginEnd="16dp"

        android:id="@+id/user_bnv_search_button"



        android:background="@android:color/transparent"
        android:textColor="#8c8c8c"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp"

        android:layout_height="80dp"
        android:paddingBottom="0dp"/>

    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/user_bnv_search_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@id/user_bnv_search_button"
        android:background="@drawable/bnv_search_icon"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:fontFamily="@font/montserrat_light1"
        android:layout_alignStart="@id/user_bnv_search_button"
        android:id="@+id/user_bnv_search_txt"
        android:layout_width="58dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:textSize="18sp"
        android:textColor="#8c8c8c"

        android:layout_alignEnd="@id/user_bnv_search_button"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="#0069b5"/>
    <TextView
        android:id="@+id/user_bnv_home_selected_line"
        android:layout_width="137dp"
        android:layout_height="5dp"
        android:layout_marginTop="3dp"
        android:visibility="invisible"

        android:background="#0069b5"/>


    <TextView
        android:id="@+id/user_bnv_search_selected_line"
        android:layout_width="137dp"
        android:layout_height="5dp"
        android:visibility="invisible"
        android:layout_marginTop="3dp"
        android:layout_alignParentEnd="true"
        android:background="#0069b5"/>


</RelativeLayout>