<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_user_seach_autores"
    android:background="@android:color/transparent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_item_autor_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:fontFamily="@font/montserrat_light1"
        android:id="@+id/user_item_autor_name"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Nome do autor"
        android:textSize="26dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="116dp"
        android:singleLine="true"
        android:textColor="@color/unselectedItem"
        />

</RelativeLayout>